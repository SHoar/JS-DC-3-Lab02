<h1>Search for an Artist on Spotify <small>without having to go there</small></h1>

<form class="search" action="/search" method="post">
  <input type="text" id="query" class="form-control" name="artist" placeholder="Artist" value="">
  <input class="button btn btn-default" id="search" type="button" name="submit" value="Submit">
</form>
<hr>
<!-- Projects Row -->
<ul>
<div class="row results">
{{#each artist}}
<div class="col-md-4 portfolio-item">
    <a href="#">
        <img class="img-responsive" src="{{artist.spotifyURL}}" alt="{{artist.name}}">
    </a>
    <h3>
        <a href="#">{{artist.name}}</a>
    </h3>
    <p>{{artist.genre}}</p>
</div>
{{/each}}
</div>
</ul>
<!-- /.row -->

<hr>

